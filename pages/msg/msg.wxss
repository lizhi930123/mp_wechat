/* pages/quanzi_xiaoxi/quanzi_xiaoxi.wxss */

page {
  width: 100%;
  height: 100%;
  position: relative;
}

.xiaoxi_container {
  position: relative;
  margin-bottom: 40rpx;
}

.zan, .comment, .reply {
  border-left: 1rpx solid #F4F4F4;
}

/*点赞区域*/
.zan {
  padding-top: 30rpx;
  font-size: 30rpx;
  margin-left: 50rpx;
  padding-left: 50rpx;
  position: relative;
}

/*点赞的人物数据部分*/

.zan_info {
  display: flex;
  position: relative;
}

.zan_info image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.zan_info .zan_whotime {
  margin-left: 20rpx;
}

.zan_info .zan_whotime .zan_who {
  font-size: 30rpx;
  color: #333;
}

.zan_info .zan_time {
  font-size: 24rpx;
  color: #b2b2b2;
  margin-top: 18rpx;
}

.zan_info .zan_delete {
  font-size: 26rpx;
  color: #b2b2b2;
  position: absolute;
  right: 14rpx;
  top: 5rpx;
}

/*点赞的内容部分*/
.zan_post {
  display: flex;
  margin-top: 30rpx;
}

.zan_post .zan_content_img {
  width: 120rpx;
  height: 120rpx;
}

.zan_post .zan_content {
  width: 624rpx;
  height: 120rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  background: rgb(244, 244, 244);
  overflow: hidden;
  text-overflow: ellipsis;
}

.zan_post .zan_content .zan_author {
  color: rgb(176, 176, 176);
}

.zan_logo_img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left:-26rpx;
  top: 50rpx;
}

/*评论区域*/

.comment {
  padding-top: 50rpx;
  font-size: 30rpx;
  margin-left: 50rpx;
  padding-left: 50rpx;
  position: relative;
}

.comment_content {
  margin-top: 32rpx;
  width:624rpx;
  word-break: break-all;
}

.comment_logo_img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: -26rpx;
  top: 66rpx;
}

/*回复内容区域*/

.reply {
  padding-top: 50rpx;
  font-size: 30rpx;
  margin-left: 50rpx;
  padding-left: 50rpx;
  position: relative;
}

.reply_author {
  color: rgb(176, 176, 176);
}

.reply_logo_img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: -26rpx;
  top: 66rpx;
  z-index: 99;
}


/*左侧的竖直线条*/
.vertical_line {
  position: absolute;
  height: 85%;
  width: 1rpx;
  top: 60rpx;
  left: 48rpx;
  background: #EEE;
  z-index: -99;
}
