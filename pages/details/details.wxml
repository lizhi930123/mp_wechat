<scroll-view scroll-y class="container"  lower-threshold="50" bindscrolltolower="get_more_comments" wx:if="{{feed.user}}">
  <!--pages/post_detail/post_detail.wxml-->
  <view class="post_detail_container" bindtap="f_hide_commnetInput">
    <!--顶部图像名称删除区域-->
    <view class="top">
      <image src="{{feed.user.headimg}}" class="headerimg"></image>
      <view class="p_name">
        <text>{{feed.user.name}}</text>
      </view>
      <view class="delete_btn" bindtap="f_delete_post" data-feedid="{{feed._id}}" wx:if="{{feed.user.me}}">
        <text>删除</text>
      </view>
    </view>
    <!--顶部图像名称删除区域结束-->
    <!-- 博文内容区域-->
    <view class="content">
      <text>{{feed.content}}
      </text>
    </view>
    <!-- 博文内容区域结束-->
    <!--博文图片区域-->
    <view class="img_area">
      <block wx:for="{{feed.photos}}" wx:key="*this">
        <image src="{{item.thumbnail}}" bindtap="f_preview_img" data-index="{{index}}"></image>
      </block>
    </view>
    <!--博文图片区域结束-->
    <!--博文发表时间 赞评论图标-->
    <view class="time_comment">
      <text>{{feed.time.create}}</text>
      <image src="{{feed.liked?'../../image/home/liked.png':'../../image/home/like.png'}}" class="zan_img" bindtap="f_change_like" data-feedid="{{feed._id}}"></image>
      <image src="../../image/home/comment.png" class="comment_img" catchtap="f_comment_icon__click" data-replyuser=""></image>
    </view>
    <!--博文发表时间 赞评论图标结束-->
    <!--赞列表-->
    <view class="zan_list">
      <view class="zan_img_area">
        <block wx:for="{{feed.likeusers}}" wx:key="{{item._id}}">
          <image src="{{item.headimg}}"></image>
        </block>
      </view>
      <text class="zan_num" bindtap="f_nav_zan_list" data-id="{{feed._id}}" data-me="{{feed.user.me?1:0}}">{{feed.stat.like}}人赞过 ＞ </text>
    </view>
    <!--赞列表结束-->
  </view>
  <view class="line" bindtap="f_hide_commnetInput"></view>
  <view class="comments" bindtap="f_hide_commnetInput">
    <view class="all_comment_text">全部评论 ({{feed.stat.comment}})</view>
    <block wx:for="{{feed.comments}}" wx:key="{{item._id}}">
      <view class="info">
        <image src="{{item.user.headimg}}" class="headerimg"></image>
        <view class="reply_detail">
          <view class="p_name">
            <text style="{{item.user.me?'color:#BA2F22':'color:#777777'}}">{{item.user.name}}<text class="self_say" wx:if="{{item.b}}">本人说</text></text>
          </view>
          <view class="p_time">{{item.time.create}}</view>
          <view class="p_content" >
          <text catchtap="f_comment_icon__click" data-replyuser="{{item.user}}">
          <text wx:if="{{item.replyuser}}">回复 <text class="p_content_name" style="{{item.replyuser.me?'color:#BA2F22':'color:#777777'}}">{{item.replyuser.name}} ：</text></text>{{item.content}}
          </text>
          </view>
        </view>
      </view>
    </block>
  </view>
</scroll-view>
<!--底部的评论输入框-->
<view class="word_input" wx:if="{{word_input}}">
  <view class="jss_brs">
    <view bindtap="check_play" class="{{self?'':'active'}}">角色说</view>
    <view bindtap="check_self" class="{{self?'active':''}}">本人说</view>
  </view>
  <input type="text" bindinput="check_val" value="{{val}}" cursor-spacing="30" focus="{{focus_input}}" placeholder="{{reply_name}}" placeholder-style="color:#b2b2b2" />
  <view class="sure_comment" bindtap="reply">回复</view>
</view>