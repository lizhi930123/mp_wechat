.word_input{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
     height:120rpx;
    padding-top: 10rpx;
    background: #f4f4f4;
    z-index: 999;
}
.word_input>.sure_comment{
    float: left;
    width:106rpx;
