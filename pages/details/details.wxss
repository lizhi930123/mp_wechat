/* pages/post_detail/post_detail.wxss */
page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
}

.post_detail_container {
  padding: 40rpx 30rpx 0 30rpx;
}

/*顶部图像 名称 删除区域*/

.top {
  display: flex;
  position: relative;
}

.top .headerimg {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.top .p_name {
  color: #777;
  line-height: 88rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  width: 450rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
}

.self_say {
    display: inline-block;
    font-size:12rpx;
    height:22rpx;
    line-height: 22rpx;
    background:#999;
    padding:0 8rpx;
    border-radius:6rpx;
    color:#fff;
    margin-left:10rpx;
    position: relative;
    top: -4rpx;
}

.top .delete_btn {
  position: absolute;
  right: 24rpx;
  font-size: 26rpx;
  color: #b2b2b2;
  line-height: 88rpx;
}

/*博文内容区域*/

.content {
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
}

.img_area {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

/*博文图片区域*/

.img_area image {
  width: 210rpx;
  height: 210rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}

/*博文发表时间 赞评论图标*/

.time_comment {
  font-size: 24rpx;
  color: #b2b2b2;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #d8d8d8;
  position: relative;
}

.time_comment>image {
  width: 46rpx;
  height: 46rpx;
}

.time_comment .zan_img {
  position: absolute;
  right: 120rpx;
  top: 30rpx;
}

.time_comment .comment_img {
  position: absolute;
  right: 40rpx;
  top: 30rpx;
}

/*赞列表*/

.zan_list {
  margin-top: 15rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  display: flex;
}

.zan_list .zan_img_area {
  width: 470rpx;
  white-space: nowrap;
  overflow: hidden;
}

.zan_list .zan_img_area>image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 4rpx;
  border-radius: 50%;
}

.zan_list .zan_num {
  position: absolute;
  right: 40rpx;
  font-size: 26rpx;
  color: #b2b2b2;
}

.line {
  padding: 0;
  width: 100%;
  height: 16rpx;
  background: #f4f4f4;
}

/*全部评论*/

.comments {
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.comments .all_comment_text {
  font-size: 13px;
  color: #777;
}

.info {
  margin-top: 20rpx;
  display: flex;
}

.info .headerimg {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.info .reply_detail {
  margin-left: 15rpx;
  flex: 1;
}

.info .reply_detail .p_name {
  font-size: 26rpx;
  color: #ba2f22;
}

.info .reply_detail .p_time {
  font-size: 11px;
  color: #b2b2b2;
}

.info .reply_detail .p_content {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #d8d8d8;
}

.p_content .p_content_name {
  color: #777;
  line-height: 42rpx;
}


